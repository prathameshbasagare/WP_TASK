{
    "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
    "customTemplates": [
        {
            "name": "custom-page-template",
            "title": "Custom Page",
			"postTypes": [
				"page",
                "post"
			]
        }
    ],
    "settings":{
        "layout": {
			"contentSize": "700px",
			"wideSize": "1125px"
		},
        "border": {
            "color": true,
            "width": true,
            "radius": true,
            "style": true
        },
        "appearanceTools":true,
        "typography": {
            "fontWeight": true,
            "fontFamilies": [
            {
                "fontFamily": "'PT Sans', sans-serif",
                "name": "PT Sans",
                "slug": "pt-sans",
                "fontFace": [
                    {
                        "fontFamily": "PT Sans",
                        "fontStyle": "normal",
                        "fontWeight": "200",
                        "name": "Thin",
                        "src": [ "https://fonts.googleapis.com/css2?family=PT+Sans:wght@300;400;700&display=swap" ]
                    },
                    {
                        "fontFamily": "PT Sans",
                        "fontStyle": "normal",
                        "fontWeight": "400",
                        "name": "Normal",
                        "src": [ "https://fonts.googleapis.com/css2?family=PT+Sans:wght@300;400;700&display=swap" ]
                    },
                    {
                        "fontFamily": "PT Sans",
                        "fontStyle": "normal",
                        "fontWeight": "700",
                        "name": "Bold",
                        "src": [ "https://fonts.googleapis.com/css2?family=PT+Sans:wght@300;400;700&display=swap" ]
                    }
                ]
            },
            {
                "fontFamily": "'Montserrat', sans-serif",
                "name": "Montserrat",
                "slug": "montserrat",
                "fontFace": [
                    {
                        "fontFamily": "Montserrat",
                        "fontStyle": "normal",
                        "fontWeight": "300",
                        "name": "Thin",
                        "src": [ "https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap" ]
                    },
                    {
                        "fontFamily": "Montserrat",
                        "fontStyle": "normal",
                        "fontWeight": "400",
                        "name": "Normal",
                        "src": [ "https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap" ]
                    },
                    {
                        "fontFamily": "Montserrat",
                        "fontStyle": "normal",
                        "fontWeight": "500",
                        "name": "Medium",
                        "src": [ "https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap" ]
                    },
                    {
                        "fontFamily": "Montserrat",
                        "fontStyle": "normal",
                        "fontWeight": "700",
                        "name": "Bold",
                        "src": [ "https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap" ]
                    }
                ]
            }
        ]

        },
        "blocks": {
            "core/group":{
                "border": {
                    "color": true
                }
            },
            "core/navigation-link": {
                "border": {
                    "width": true,
                    "style": true,
                    "color": true,
                    "radius": true
                },
                "shadow": true
            },
            "core/navigation":{
                "border": {
                    "width": true,
                    "style": true,
                    "color": true,
                    "radius": true
                },
                "shadow": true
            }
        },
        "color": {
            "defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
            "palette": [
                {
                    "color": "#F39B4E",
                    "name": "Variant-5",
                    "slug": "variant-5"
                },
                {
                    "color": "#696969",
                    "name": "Variant 6",
                    "slug": "variant-6"
                },
                {
					"color": "#FFFFFF",
					"name": "Base",
					"slug": "base"
				},
                {
                    "color": "#DC3636",
                    "slug": "theme-red",
                    "name": "Theme Red"
                },
                {
                    "color": "#434343",
                    "name": "Theme Text",
                    "slug": "theme-text"
                },
                {
                    "color": "#fdf0e4",
                    "name": "variant 1",
                    "slug": "variant-1"
                },
                {
                    "color": "#ECECEC",
                    "name": "Theme Background Color",
                    "slug": "theme-background-color"
                },
                {
                    "color": "#f8d7d7",
                    "name": "variant 2",
                    "slug": "variant-2"
                },
                {
                    "color": "#b4b4b4",
                    "name": "variant 3",
                    "slug": "variant-3"
                },
                {
                    "color": "#00ACB4",
                    "name": "Variant 4",
                    "slug": "variant-4"
                }
            ]
        }
        
    },
    "styles":{
        "color": {
			"background": "var:preset|color|base",
			"text": "var:preset|color|theme-text"
		},
        "blocks": {
            "core/navigation":{
                "elements": {
                    "link":{
                        "spacing": {
                            "padding": {
                                    "top": "10px",
                                    "right": "10px",
                                    "bottom": "10px",
                                    "left": "10px"
                                }
                        }
                    }
                }
            }
        }
       
    }
}